<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/default_list_item_height"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/default_list_item_padding"
              android:paddingTop="@dimen/default_list_item_padding">

    <TextView
        android:id="@+id/favourite_place_item_id_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="@string/place_list_item_longitude"/>

    <TextView
        android:id="@+id/place_list_item_longitude_value_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="@string/place_list_item_latitude"/>

    <TextView
        android:id="@+id/place_list_item_latitude_value_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"/>

    <ImageView
        android:id="@+id/place_list_details_arrow"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/forward_arrow"/>


</LinearLayout>